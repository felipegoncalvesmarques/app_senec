<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.felipe.senec.DetailActivity">

    <TextView
        android:id="@+id/titulo_atividade"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="28sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:id="@+id/descricao_atividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_atividade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="18sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descricao_atividade"
        android:layout_alignLeft="@+id/descricao_atividade"
        android:layout_alignStart="@+id/descricao_atividade"
        android:id="@+id/local_atividade"
        android:layout_margin="5sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="16sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descricao_atividade"
        android:layout_alignRight="@+id/descricao_atividade"
        android:layout_alignEnd="@+id/descricao_atividade"
        android:id="@+id/data_horario_atividade"
        android:layout_margin="5sp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp" />

    <Switch
        android:text="Inscritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_horario_atividade"
        android:layout_alignLeft="@+id/local_atividade"
        android:layout_alignStart="@+id/local_atividade"
        android:id="@+id/headline_inscritos"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textStyle="normal|italic"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp" />
    <ListView
        android:id="@+id/subscribed_list"
        android:layout_below="@+id/headline_inscritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>



</RelativeLayout>
